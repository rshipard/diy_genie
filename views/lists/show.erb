<header>
        <ul class="no-bullets">
            <li>
                <form action="/main" method="GET">
                    <button>Home</button>
                </form>
            </li>
            <li>
                <form action="/friends" method="GET">
                    <button>Friends</button>
                </form>
            </li>
            <li>
                <form action="/logout" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                    <button>Logout</button>
                </form>
            </li>
        </ul>
</header>

<form action="/grant-wish" method="POST">
    <ul class="no-bullets">
        <h2>They would like:</h2>
        <% results.each do |gift|%>
            <% if gift['purchased'] == 'f'%>
                <li>
                    <form action="/grant-wish" method="POST">
                        <%= gift['quantity'] %> of 
                        <%= gift['gift_title'] %>. Preferably 
                        <%= gift['gift_description'] %>, in this size  
                        <%= gift['size'] %>
                        <input type="hidden" name="gift_id" value="<%= gift['gift_id']%>">
                        <input type="hidden" name="list_id" value="<%= gift['list_id']%>">
                        <input type="submit" value="Grant Wish">
                    </form>
                </li>
            <% else %>
                <li>
                    <%= gift['quantity'] %> of 
                    <%= gift['gift_title'] %>. Preferably 
                    <%= gift['gift_description'] %>, in this size  
                    <%= gift['size'] %>
                    <input type="hidden" name="gift_id" value="<%= gift['gift_id']%>">
                    <input type="hidden" name="list_id" value="<%= gift['list_id']%>">
                    <input type="button" value="Wish Granted">
                </li>
            <% end %>
        <% end%>
    </ul>
</form>